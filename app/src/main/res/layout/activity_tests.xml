<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tests">

    <LinearLayout
        android:background="@color/blacke"
        android:layout_width="409dp"


        android:layout_height="729dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:background="@drawable/roundimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:layout_margin="6dp"
                android:background="@drawable/round"
                android:gravity="center"
                android:orientation="horizontal"

                android:padding="5dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:alpha="0.7"
                    app:cardCornerRadius="10dp">

                    <FrameLayout

                        android:id="@+id/imageView5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:alpha="1"
                        android:background="@drawable/enginner"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="16sp"

                    android:fontFamily="@font/boto"
                    android:text="Сварщик"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/boto"
                    android:text="Строитель"
                    android:textSize="16sp"

                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/boto"
                    android:textSize="16sp"
                    android:text="Полиция"
                    android:textColor="@color/black" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout

            android:id="@+id/kudadobovlat"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_margin="20dp"


            android:background="@drawable/roundgraybord">


        </FrameLayout>

        <FrameLayout
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:background="@drawable/round"

            >

            <FrameLayout
                android:id="@+id/button5"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundgray"
                android:onClick="ghh"
                android:gravity="center"

                >

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="БЕЖАТЬ"
                    android:textColor="@color/dick" />
            </FrameLayout>
        </FrameLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>